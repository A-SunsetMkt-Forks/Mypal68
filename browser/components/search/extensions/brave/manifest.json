{
  "name": "Brave",
  "description": "Brave search",
  "manifest_version": 2,
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "brave@search.mozilla.org"
    }
  },
  "hidden": true,
  "icons": {
    "64": "favicon.svg"
  },
  "web_accessible_resources": [
    "favicon.svg"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Brave",
      "keyword": "@brave",
      "search_url": "https://search.brave.com/search",
      "search_form": "https://search.brave.com/search?q={searchTerms}",
      "search_url_get_params": "q={searchTerms}"
    }
  }
}